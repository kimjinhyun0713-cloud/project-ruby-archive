<% flash.each do |key, message| %>
  <% 
    # 色の切り替え: notice(成功)なら緑、alert(失敗)なら赤
    bg_color = key == "notice" ? "#d4edda" : "#f8d7da"
    text_color = key == "notice" ? "#155724" : "#721c24"
  %>
  <div style="
    background-color: <%= bg_color %>;
    color: <%= text_color %>;
    padding: 15px;
    margin-bottom: 20px;
    border: 1px solid <%= text_color %>;
    text-align: center;
  ">
    <%= message %>
  </div>
<% end %>