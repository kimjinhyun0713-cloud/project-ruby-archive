<%
  # 1. Researchに関連するコントローラー名のリスト
  research_controllers = %w[research papers notes]
  
  # 2. Techに関連するコントローラー名のリスト
  tech_controllers = %w[tech projects posts tools]

  # 3. 現在のページがどこかで分岐
  if controller_name.in?(research_controllers)
    header_title = "Kimuni's Research"
    header_link  = research_index_path rescue root_path # パスエラー回避用
    color = "#007bff"
    
  elsif controller_name.in?(tech_controllers)
    header_title = "Kimuni's Tech"
    header_link  = tech_index_path rescue root_path
    color = "#DC143C"
    
  else
    # それ以外（トップページなど）
    header_title = "Kimuni's"
    header_link  = root_path
    color ="#333333"
  end
%>

<header 
  
  onmouseover="this.style.backgroundColor='<%= color %>'; this.style.color='#ffffff';"
  
  
  onmouseout="this.style.backgroundColor='#ffffff'; this.style.color='<%= color %>';"
  
  style="
  width: fit-content;
  background-color: #ffffff;
  border: 4px solid <%= color %>;
  color: <%= color %>;
  display: flex;
  align-items: center;
  padding: 20px 50px;
  box-sizing: border-box;
  border-radius: 20px; 
  margin: 20px auto;
  font-family: 'Arial Rounded MT Bold', 'M PLUS Rounded 1c', sans-serif;
  
  /* ▼ ふわっと変化させるための魔法 */
  transition: all 0.3s ease;
  cursor: pointer; /* マウスカーソルを指の形にする */
">
  <div style="
    font-size: 2.5rem; 
    font-weight: bold; 
    text-align: center;
    white-space: nowrap; /* 文字が増えても改行させない */
  ">
    <%# ここで変数を使います %>
    <%= link_to header_title, header_link, style: "text-decoration: none; color: inherit;" %>
  </div>

  <% if false %>
    <nav style="display: flex; gap: 20px;">
       <%# ... 省略 ... %>
    </nav>
  <% end %>

</header>

